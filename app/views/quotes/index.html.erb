<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-6">名言一覧</h1>
  
  <%= link_to '新規投稿', new_quote_path, class: 'btn btn-primary mb-4' %>
  
  <div class="grid gap-4">
    <% @quotes.each do |quote| %>
      <div class="bg-white rounded-lg shadow-md p-6">
        <p class="text-lg font-semibold mb-2"><%= quote.content %></p>
        <p class="text-gray-600 mb-3">- <%= quote.source %></p>
        <div class="flex justify-between items-center">
          <span class="badge"><%= quote.scene %></span>
          <span class="text-sm text-gray-500">by <%= quote.user.username %></span>
        </div>
      </div>
    <% end %>
  </div>
</div>