<div class="container mx-auto px-4 py-8">
    
  <!-- ヒーローセクション -->
  <section class="mb-10 rounded-2xl bg-gradient-to-r from-orange-50 to-amber-50  border border-orange-100  overflow-hidden relative z-0">
    <!-- 装飾用の背景 -->
    <div class="absolute top-0 right-0 w-64 h-64 bg-primary/10 rounded-full blur-3xl -translate-y-1/2 translate-x-1/2"></div>
    
    <div class="flex flex-col md:flex-row items-center justify-between p-8 md:p-12 relative gap-8">
      <!-- テキストコンテンツ -->
      <div class="flex flex-col gap-4 max-w-2xl text-center md:text-left">
        <h2 class="text-3xl md:text-4xl font-black text-text-main leading-tight">
          プレゼンで使える<span class="text-primary">名言</span>を共有しよう
        </h2>
        <p class="text-text-muted text-lg font-medium">
          あなたの人生を変えた一言、忘れられないあのシーンのセリフ。<br class="hidden md:block"/>
          コレクションに追加して、次のスライドに入れちゃおう。
        </p>
      </div>
      
      <!-- 投稿ボタン -->
      <div class="shrink-0">
        <% if user_signed_in? %>
          <%= link_to new_quote_path, class: "group flex items-center gap-2 h-14 px-8 rounded-xl bg-primary hover:bg-orange-600 font-bold shadow-lg shadow-orange-500/30 active:scale-95 transition-all text-white text-base " do %>
            <span class="material-symbols-outlined">edit_square</span>
            <span>セリフを投稿する</span>
          <% end %>
        <% else %>
          <%= link_to new_user_session_path, class: "group flex items-center gap-2 h-14 px-8 rounded-xl bg-primary hover:bg-orange-600 active:scale-95 transition-all text-white text-base font-bold shadow-lg shadow-orange-500/30" do %>
            <span class="material-symbols-outlined">login</span>
            <span>ログインして投稿する</span>
          <% end %>
        <% end %>
      </div>
    </div>
  </section>

  <!-- 名言一覧 -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @quotes.each do |quote| %>
    <%= link_to quote_path(quote), class: "block" do %>
      <div class="bg-white rounded-xl shadow-md hover:shadow-xl transition-shadow p-6 flex flex-col justify-between">
        <div class="flex mb-4">
        <span class="material-symbols-outlined text-primary mr-2">account_circle</span>
        <p>@<%= quote.user.username %></p>
        </div>
        <p class="text-xl font-semibold text-gray-800 mb-4">
          "<%= quote.content %>"
        </p>
        <div class="flex items-center justify-between text-sm text-gray-600">
          <span class="material-symbols-outlined text-primary">Person</span>
          <span class="text-primary font-bold"><%= quote.source %></span>
          <span><%= quote.created_at.strftime('%Y/%m/%d') %></span>
        </div>
      </div>
      <% end %>
    <% end %>
  </div>
</div>
