<div class="flex min-h-screen items-center justify-center">
  <div class="w-full max-w-[480px] bg-white rounded-2xl shadow-xl border border-border-light overflow-hidden z-10">
 <! -- title -->
<div class="px-8 pt-10 pb-4 text-center">
    <h1 class="text-2xl md:text-3xl font-bold mb-2">
        <span class="material-symbols-outlined text-[30px] text-primary">edit_note</span>
          新しいセリフを投稿
    </h1>
    <p class="text-text-secondary text-sm">
        好きなセリフを投稿して、プレゼンで使ってもらおう！
    </p>
</div>

<! -- form container -->
    <%= form_with(model: @quote) do |f| %>
        <% if @quote.errors.any? %>
            <div style="color: red">
                <h2><%= pluralize(quote.errors.count, "error") %>prohibited this task from being saved:</h2>
            </div>

            <ul>
                <% quote.errors.each do |error| %>
                    <li><%= error.full_message %></li>
                <% end %>
            </ul>
            </div>
        <% end %>
    <div class="p-8 pt-4">
        <% input_class = "form-input w-full rounded-lg border border-border-light
                        bg-input-bg-light h-30 px-4 text-base
                        focus:border-primary focus:ring-primary" %>

        <div>
            <%= 
        </div>

        <div>
            <label class="text-sm font-bold">出典（キャラクター名や作品名）</label>
            <%= f.text_field :source, 
                  class: "form-input w-full rounded-lg border border-border-light
                          bg-input-bg-light h-12 px-4 text-base
                          focus:border-primary focus:ring-primary",
                  placeholder: "例：北斗の拳" %>
        </div>

        <div>
            <%= f.submit "投稿する",
                  class: "w-full mt-4 h-14 bg-primary hover:bg-orange-600 active:scale-95
                          transition-all text-white text-base font-bold rounded-xl
                          shadow-lg shadow-orange-500/30" %>
        </div>
    <% end %>
    </div>
    </div>
</div>