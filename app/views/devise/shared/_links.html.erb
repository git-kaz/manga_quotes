<div class="flex flex-col gap-3 text-sm">
  <%- if controller_name != 'sessions' %>
    <div class="text-center">
      <span class="text-[#9a734c]">既にアカウントをお持ちの方は</span>
      <%= link_to "ログイン", new_session_path(resource_name), class: "text-primary hover:text-[#d67b20] transition-colors font-medium ml-1" %>
    </div>
  <% end %>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <div class="text-center">
      <span class="text-[#9a734c]">アカウントをお持ちでない方は</span>
      <%= link_to "新規登録", new_registration_path(resource_name), class: "text-primary hover:text-[#d67b20] transition-colors font-medium ml-1" %>
    </div>
  <% end %>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <div class="text-center">
      <%= link_to "パスワードをお忘れですか？", new_password_path(resource_name), class: "text-primary hover:text-[#d67b20] transition-colors font-medium" %>
    </div>
  <% end %>

  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <div class="text-center">
      <%= link_to "確認メールを再送信", new_confirmation_path(resource_name), class: "text-primary hover:text-[#d67b20] transition-colors font-medium" %>
    </div>
  <% end %>

  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <div class="text-center">
      <%= link_to "アカウントロック解除の手順を送る", new_unlock_path(resource_name), class: "text-primary hover:text-[#d67b20] transition-colors font-medium" %>
    </div>
  <% end %>

  <%- if devise_mapping.omniauthable? %>
    <%- resource_class.omniauth_providers.each do |provider| %>
      <div class="text-center mt-4">
        <%= button_to "#{OmniAuth::Utils.camelize(provider)}でログイン", 
          omniauth_authorize_path(resource_name, provider), 
          data: { turbo: false },
          class: "w-full flex items-center justify-center gap-2 rounded-lg h-12 px-4 border-2 border-[#e7dbcf] bg-white hover:bg-[#fcfaf8] transition-colors text-[#1b140d] text-base font-medium" 
        %>
      </div>
    <% end %>
  <% end %>
</div>